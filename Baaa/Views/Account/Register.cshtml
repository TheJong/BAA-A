@model Baaa.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}
<head>
    <link href="~/Content/Login.css" rel="stylesheet" />
</head>
<h1>@ViewBag.Title.</h1>
@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Maak een nieuw account aan.</h4>
    <hr />
    <div class="form-group">
        @Html.ValidationSummary("", new { @class = "text-danger" })
        @Html.LabelFor(m => m.Email, "E-Mail", new { @class = "" })
        <div class="col-md-12">
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Password, "Wachtwoord", new { @class = "" })
        <div class="col-md-12">
            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.ConfirmPassword, "Bevestig wachtwoord", new { @class = "" })
        <div class="col-md-12">
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
        </div>
    </div>
    <hr />
    <div class="form-group">
        <div class="col-md-12">
            <input type="submit" class="btn btn-default" value="Registreer" />
        </div>
    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
